<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="me.lx.sample.ClickListeners" />

        <variable
            name="model"
            type="me.lx.sample.model.ThreeLevelGroupModel" />

        <variable
            name="rvBindGroup"
            type="me.lx.rv.RvThreeLevelGroupBindListener&lt;Object,Object,Object&gt;" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            app:rv_two_level_group_adapter="@{rvBindGroup.getAdapter()}"
            app:rv_two_level_group_chick_child_child_listener="@{rvBindGroup.getClickChildChildListener()}"
            app:rv_two_level_group_chick_footer_listener="@{rvBindGroup.getClickFootListener()}"
            app:rv_two_level_group_chick_cg_header_footer="@{rvBindGroup.getClickCgHeaderFooterListener()}"
            app:rv_two_level_group_chick_header_listener="@{rvBindGroup.getClickHeaderListener()}"
            app:rv_two_level_group_items="@{rvBindGroup.getGroups()}"
            app:rv_two_level_group_layout_span="@{rvBindGroup.getLayoutFlag()}"
            app:rv_two_level_group_loadmore_listener="@{rvBindGroup.getLoadMoreListener()}"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />




        <LinearLayout
            style="?buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3443">

            <Button
                android:id="@+id/add"
                style="?buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{() -> click.clickAddItem()}"

                android:text="Add Item" />

            <Button
                android:id="@+id/remove"
                style="?buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClickListener="@{() -> click.clickRemoveItem()}"
                android:text="Remove Item" />
        </LinearLayout>

    </LinearLayout>
</layout>
