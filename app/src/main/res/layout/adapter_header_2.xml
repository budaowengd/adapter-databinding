<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="gHeaderClick"
            type="me.lx.rv.group.BaseFun1ClickGroupListener" />

        <variable
            name="gHeader"
            type="me.lx.sample.group.entity.GroupEntity" />

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->headerClick.clickGroup(headerGroup)}"
        android:background="@drawable/holo_purple_ripple_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='@{headerGroup.header}'
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</layout>