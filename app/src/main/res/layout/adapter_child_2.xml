<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="childClick"
            type="me.lx.rv.group.BaseClickGroupListener" />

        <variable
            name="childItem"
            type="me.lx.sample.group.entity.ChildEntity" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:onClick="@{()->childClick.clickGroupItem(childItem)}"
    android:background="@drawable/holo_blue_bright_ripple_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_child_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="8dp"
        android:text='@{childItem.child}'
        android:textSize="16sp" />

</LinearLayout>
</layout>