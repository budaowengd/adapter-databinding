<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="footerClick"
            type="me.lx.rv.group.BaseFun1ClickGroupListener" />

        <variable
            name="footerGroup"
            type="me.lx.sample.group.entity.TwoLevelGroupEntity" />

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->footerClick.clickGroup(footerGroup)}"
        android:background="@drawable/holo_orange_light_ripple_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{footerGroup.footerText}"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</layout>