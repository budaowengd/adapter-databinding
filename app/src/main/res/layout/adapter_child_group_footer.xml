<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="childGroupFooterClick"
            type="me.lx.rv.group.BaseFun1ClickGroupListener" />
        <variable
            name="childGroup"
            type="me.lx.sample.group.entity.ChildGroupEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:onClick="@{()->childGroupFooterClick.clickGroup(childGroup)}"
        android:background="@drawable/white_ripple_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1111111111"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>
</layout>