<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="me.lx.sample.Group3Frag" />

        <variable
            name="gHeaderClick"
            type="me.lx.rv.group.BaseFun2ClickGroupListener" />

        <variable
            name="gHeader"
            type="me.lx.sample.group.entity.TwoLevelGroupEntity" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/holo_red_dark_ripple_bg"
        android:onClick="@{()->headerClick.clickGroup(headerGroup,Group3Frag.click_g_header)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{headerGroup.headerText}"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</layout>